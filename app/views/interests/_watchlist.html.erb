<% @interests.each do |interest| %>
      <div class="card_interest">
        <div class="row">
          <div class="col-2">
            <%= image_tag interest.movie.poster %>
          </div>

          <div class="col-6">
            <div class="info">
              <h2><%= interest.movie.title %></h2>
              <p><i class="fa-brands fa-imdb fs-3"></i> <%= interest.movie.imdb_rating %></p>
              <p>Added <%= time_ago_in_words(interest.movie.created_at) %> ago</p>
            </div>
          </div>

          <div class="col-4">
            <div class="options">
              <button class="btn btn-danger"><i class="fa-solid fa-eraser"></i></button>
            </div>
          </div>
        </div>
      </div>
    <% end %>
