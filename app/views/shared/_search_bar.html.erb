<%= form_with url: movies_path, method: :get, class: "d-flex" do %>
  <%= text_field_tag :query,
    params[:query],
    class: "form-control",
    placeholder: "Saving Private Ryan..."
  %>
  <%= button_tag(type: "submit", class: "btn") do %>
    <i class="fa-solid fa-magnifying-glass"></i>
  <% end %>
<% end %>
