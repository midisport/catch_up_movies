<div class="sidebar_container">
  <div class="row">
    <div class="sidebar_title">
      <div class="logo">
        <%= link_to root_path do %>
          <%= image_tag 'logo-purple.png' %>
        <% end %>
      </div>
      <h6>Catch Up</h6>
    </div>
  </div>

  <div class="row">
    <div class="sidebar_profile">
      <% unless current_user.nil? %>
        <%= image_tag current_user.avatar, class: "avatar" %>
        <h6><%= current_user.username %></h6>
      <% end %>
    </div>
  </div>

  <hr>

  <ul class="sidebar_menu">
      <li class="sidebar_menu_item"><i class="fa-solid fa-clapperboard"></i><%= link_to "Films out now!", movies_path %></li>
    <% if user_signed_in? %>
      <li class="sidebar_menu_item"><i class="fa-solid fa-list-ul"></i><%= link_to "Dashboard", "/dashboard/#{current_user.id}" %></li>
      <li class="sidebar_menu_item"><i class="fa-regular fa-bookmark"></i><%= link_to "Watchlist", user_interests_path(current_user) %></li>
    </ul>

    <hr class="bottom">
    <ul class="sidebar_menu">
      <%= link_to destroy_user_session_path, data: {turbo_method: :delete} do %>
        <li class="log sidebar_menu_item">
        <i class="fa-solid fa-arrow-right-from-bracket"></i> Sign Out
        </li>
      <% end %>
    </ul>

  <% else %>
    <li class="sidebar_menu_item log">
    <hr class="bottom">
    <i class="fa-solid fa-arrow-right-from-bracket"></i>
    <%= link_to "Sign In", new_user_session_path %>
    </li>

  <% end %>
</div>
