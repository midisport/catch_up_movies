<div class="container page-movie-index">
  <div class="movie-index">
    <div class="search-bar">
      <%= render 'shared/search_bar' %>
    </div>
    <div class="row mx-0 mt-4">
      <div class="col-9 cards-of-movies">
        <h1>What do you want to watch?</h1>
        <div class="movies-index">
          <% @movies.each do |movie| %>
            <%# if movie.movie_shows.empty? == false %>
            <% if movie.synopsis != "N/A" %>
              <%= render 'shared/movie_card', movie: movie %>
            <% end %>
            <%# end %>
          <% end %>
        </div>
      </div>
      <div class="col-3">

        <%# unless @movie_show.empty? %>
          <div
            data-controller="map"
            data-map-markers-value="<%= @markers.to_json %>"
            data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>"
            id="map">
          </div>
        <%# end  %>
      </div>
    </div>
  </div>
</div>
