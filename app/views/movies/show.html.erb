<h1><%= @movie.title %></h1>

<div class="row">
  <div class="col-md-4">
    <%= image_tag @movie.poster, class: 'poster' %>
  </div>
  <div class="col-md-8">
    <p>Réalisé par: <%= @directors %></p>
    <p>Synopsis: <%= @movie.synopsis %></p>
    <p>Genre: <%= @movie.genre %></p>
    <p>Sortie: <%= @movie.release_date %></p>
    <p>Durée: <%= @movie.duration %></p>
    <p>Pays: <%= @movie.country %></p>
    <p>Langue d'origine: <%= @movie.language %></p>
    <p>Note: <%= @movie.imdb_rating %></p>
    <p>Casting: <%= @actors %></p>
  </div>
</div>
